grammar Simple;

/*------------------------------------------------------------------
 * PARSER RULES
 *------------------------------------------------------------------*/

prog: ( stat? NEWLINE )* ;

stat:
        WRITE ID		#write
	|   ID '=' INT		#assign
	|   READ ID   		#read
;

/*------------------------------------------------------------------
 * LEXER RULES
 *------------------------------------------------------------------*/

WRITE:	'write'
   ;

READ:	'read'
   ;

ID:   ('a'..'z'|'A'..'Z')+
   ;

INT:   '0'..'9'+
    ;

NEWLINE:	'\r'? '\n'
    ;

WS: ( [ \t\r\n]) -> skip ;

COMMENT : '#' ~[\r\n]* NEWLINE? -> skip ;